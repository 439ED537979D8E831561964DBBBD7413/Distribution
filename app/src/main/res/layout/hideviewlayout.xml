<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Seal_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="封  签  号 ：168135168165" />

            <TextView
                android:id="@+id/Delivery_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="送货地址：石排镇赤坎村二号便利店" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="联系电话：15573462029" />


            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="客户名称：" />

            <TextView
                android:id="@+id/moneys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="金额：2369元-本次退货369元=2000元"
                android:textColor="@color/snackbar_bg" />

            <TextView
                android:id="@+id/remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="客户备注：" />

            <TextView
                android:id="@+id/Distribution_Success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="配送成功" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sure_Distribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="可配送"
                android:textColor="@color/turquoise" />

            <TextView
                android:id="@+id/myNavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgshape"
                android:drawableLeft="@drawable/navigation"
                android:drawablePadding="2dp"
                android:padding="4dp"
                android:text="导  航" />

            <TextView
                android:id="@+id/dial_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgshape"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="5dp"
                android:padding="4dp"
                android:text="拨  打" />


            <TextView
                android:id="@+id/return_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="商品退回" />


            <TextView
                android:id="@+id/sure_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgshape_org"
                android:padding="5dp"
                android:text="确定订单" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
