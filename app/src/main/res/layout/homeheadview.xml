<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_year"
            style="@style/Data_Text"
            android:gravity="center|right"
            android:text="2017年" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item_pressed" />

        <TextView
            android:id="@+id/tv_month"
            style="@style/Data_Text"
            android:gravity="center|right"
            android:text="12月" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item_pressed" />

        <TextView
            android:id="@+id/tv_day"
            style="@style/Data_Text"
            android:gravity="center|right"
            android:text="6日" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total"
            android:textColor="@color/download_stop"
            style="@style/Data_Text_Content"
            android:gravity="center|left"
            android:text="总计：69655989元" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item_pressed" />

        <TextView
            android:id="@+id/month_add"
            android:textColor="@color/download_stop"
            style="@style/Data_Text_Content"
            android:gravity="center|left"
            android:text="合计：546815元" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textColor="@color/download_stop"
            android:background="@color/item_pressed" />

        <TextView
            android:id="@+id/subtotal"
            style="@style/Data_Text_Content"
            android:gravity="center|left"
            android:text="小计：5465元" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/year_ticket"
            style="@style/Data_Text_Content"
            android:textColor="@color/Black"
            android:gravity="center|left"
            android:text="票数:654198" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item_pressed" />

        <TextView
            android:id="@+id/month_ticket"
            style="@style/Data_Text_Content"
            android:gravity="center|left"
            android:textColor="@color/Black"
            android:text="票数:51656" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item_pressed" />

        <TextView
            android:id="@+id/day_ticket"
            style="@style/Data_Text_Content"
            android:gravity="center|left"
            android:textColor="@color/Black"
            android:text="票数:521" />
    </LinearLayout>

</LinearLayout>
